= content_for :head
  title Poll Completed

h1 #{poll} Completed

p
  | Thanks #{responder.email}! (
  a href="/logout?r=/poll/#{poll.id}" Logout
  | )

include :expiration_text

- case poll.type
- when :borda_single, :borda_split
  p Here's your recorded responses.

  ol
    - responder.responses.sort_by!(&:score).reverse!.each do |response|
      - chosen = response.score > 0 ? '✅' : '❌'
      - points = 'point'.en.plural(response.score)
      li ="#{response.choice.text} #{chosen} (#{response.score} #{points})"

-when :choose_one
  p You responded: #{responder.response.choice.text}
